{% if product.metafields.custom.add_ons %}
  <script
    src="{{ 'product-form.js' | asset_url }}"
    type="module"
  ></script>
  
 <script>
  let currentSlide = 0;
  const totalSlides = {{ product.metafields.custom.add_ons.value | size | default: 0 }};
  
  function changeSlide(direction) {
    const track = document.getElementById('addOnsTrack');
    if (!track || totalSlides === 0) return;
    
    currentSlide = (currentSlide + direction + totalSlides) % totalSlides; // ✅ wrap around cleanly
    
    const translateX = -currentSlide * 100;
    track.style.transform = `translateX(${translateX}%)`;
  }

  document.addEventListener('DOMContentLoaded', function() {
    if (totalSlides <= 1) {
      document.querySelectorAll('.slideshow-arrow').forEach(arrow => arrow.style.display = 'none');
    }
  });
</script>

  
  <div class="product-add-ons" style="padding-top: {{ block.settings.padding_top }}px; padding-bottom: {{ block.settings.padding_bottom }}px;">
    <h3 class="text-lg font-semibold mb-2">{{ block.settings.heading | default: "Add-ons" }}</h3>
    
    <div class="add-ons-slideshow">
      <!-- Previous Arrow -->
      <button class="slideshow-arrow slideshow-arrow--prev" onclick="changeSlide(-1)">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
          <path d="M10 3l-5 5 5 5V3z"/>
        </svg>
      </button>
      
      <!-- Slideshow Container -->
      <div class="slideshow-container">
        <div class="slideshow-track" id="addOnsTrack">
          {% for add_on in product.metafields.custom.add_ons.value %}
            <div class="add-on-slide">
              <div class="add-on-card">
          <a href="{{ add_on.url }}" class="block">
            <img 
              src="{{ add_on.featured_image | image_url: width: 150 }}" 
              alt="{{ add_on.title }}" 
              class="add-on-image"
              width="150"
              height="150"
              loading="lazy"
            >
            <p class="mt-2 text-sm font-medium">{{ add_on.title }}</p>
            {% if block.settings.show_price and add_on.price %}
              <p class="text-sm text-gray-600">{{ add_on.price | money }}</p>
            {% endif %}
          </a>
          
          {% comment %} Add to Cart Form {% endcomment %}
          <product-form-component 
            class="product-form"
            data-product-id="{{ add_on.id }}"
            data-quantity-default="1"
          >
            <form action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data" class="mt-2" on:submit="/handleSubmit">
              <input type="hidden" name="id" value="{{ add_on.selected_or_first_available_variant.id }}" ref="variantId">
              <input type="hidden" name="quantity" value="1">
              
              {% render 'add-to-cart-button',
                id: 'AddToCart-' | append: add_on.id,
                class: 'add-on-button button-small',
                can_add_to_cart: add_on.available,
                product: add_on,
                add_to_cart_text: block.settings.button_text
              %}
              
              <!-- Live region for screen readers -->
              <div ref="liveRegion" aria-live="polite" aria-atomic="true" class="sr-only"></div>
            </form>
          </product-form-component>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
      
      <!-- Next Arrow -->
      <button class="slideshow-arrow slideshow-arrow--next" onclick="changeSlide(1)">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
          <path d="M6 3l5 5-5 5V3z"/>
        </svg>
      </button>
    </div>
  </div>
{% endif %}

{% stylesheet %}
.slideshow-container {
  flex: 1;
  overflow: hidden; /* ✅ Hide overflow so only one slide shows */
  border-radius: 8px;
  position: relative;
}

.slideshow-track {
  display: flex;
  transition: transform 0.3s ease;
  width: 100%; /* Default */
}

.add-on-slide {
  min-width: 100%; /* ✅ Each slide takes full width */
  flex-shrink: 0;
  display: flex;
  justify-content: center;
}
{% endstylesheet %}


{% schema %}
{
  "name": "Product Add-ons",
  "tag": "div",
  "settings": [
    {
      "type": "header",
      "content": "Add-ons Display"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Add-ons"
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Columns",
      "options": [
        {
          "value": "1",
          "label": "1 Column"
        },
        {
          "value": "2",
          "label": "2 Columns"
        },
        {
          "value": "3",
          "label": "3 Columns"
        }
      ],
      "default": "2"
    },
    {
      "type": "header",
      "content": "Button Settings"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Add to Cart Button Text",
      "default": "+"
    },
    {
      "type": "checkbox",
      "id": "show_price",
      "label": "Show product price",
      "default": true
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 24
    }
  ],
  "presets": [
    {
      "name": "Product Add-ons"
    }
  ]
}
{% endschema %}