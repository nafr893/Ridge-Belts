{% if product.metafields.custom.add_ons %}
  <script src="{{ 'product-form.js' | asset_url }}" type="module"></script>

 <script>
  let currentSlide = 0;
  const totalSlides = {{ product.metafields.custom.add_ons.value | size | default: 0 }};
  
  function changeSlide(direction) {
    const track = document.getElementById('addOnsTrack');
    if (!track || totalSlides === 0) return;

    const slides = track.children;
    const slideWidth = slides[0].offsetWidth; // ✅ dynamic width per slide
    const container = track.parentElement;
    const slidesPerView = Math.round(container.offsetWidth / slideWidth);

    // max index we can go before empty space
    const maxIndex = totalSlides - slidesPerView;

    currentSlide = (currentSlide + direction + totalSlides) % totalSlides;
    if (currentSlide > maxIndex) currentSlide = 0; // ✅ loop back to start

    const translateX = -currentSlide * slideWidth;
    track.style.transform = `translateX(${translateX}px)`;
  }

  document.addEventListener('DOMContentLoaded', function() {
    if (totalSlides > 1) {
      document.querySelectorAll('.slideshow-arrow').forEach(arrow => {
        arrow.classList.add('visible'); // ✅ only show when needed
      });
    }
  });
</script>


  <div class="product-add-ons" style="padding-top: {{ block.settings.padding_top }}px; padding-bottom: {{ block.settings.padding_bottom }}px;">
    <h3 class="text-lg font-semibold mb-2">{{ block.settings.heading | default: "Add-ons" }}</h3>
    
    <div class="add-ons-slideshow">
      <!-- Previous Arrow -->
      <button class="slideshow-arrow slideshow-arrow--prev" onclick="changeSlide(-1)">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor"><path d="M10 3l-5 5 5 5V3z"/></svg>
      </button>
      
      <!-- Slideshow Container -->
      <div class="slideshow-container">
        <div class="slideshow-track" id="addOnsTrack">
          {% for add_on in product.metafields.custom.add_ons.value %}
            <div class="add-on-slide">
              <div class="add-on-card">
                <a href="{{ add_on.url }}" class="block">
                  <img 
                    src="{{ add_on.featured_image | image_url: width: 150 }}" 
                    alt="{{ add_on.title }}" 
                    class="add-on-image"
                    width="150"
                    height="150"
                    loading="lazy"
                  >
                  <p class="mt-2 text-sm font-medium">{{ add_on.title }}</p>
                  {% if block.settings.show_price and add_on.price %}
                    <p class="text-sm text-gray-600">{{ add_on.price | money }}</p>
                  {% endif %}
                </a>

                {% comment %} Add to Cart Form {% endcomment %}
                <product-form-component 
                  class="product-form"
                  data-product-id="{{ add_on.id }}"
                  data-quantity-default="1"
                >
                  <form action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data" class="mt-2">
                    <input type="hidden" name="id" value="{{ add_on.selected_or_first_available_variant.id }}">
                    <input type="hidden" name="quantity" value="1">
                    
                    {% render 'add-to-cart-button',
                      id: 'AddToCart-' | append: add_on.id,
                      class: 'add-on-button button-small',
                      can_add_to_cart: add_on.available,
                      product: add_on,
                      add_to_cart_text: block.settings.button_text
                    %}
                    
                    <!-- Screen reader live region -->
                    <div aria-live="polite" aria-atomic="true" class="sr-only"></div>
                  </form>
                </product-form-component>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
      
      <!-- Next Arrow -->
      <button class="slideshow-arrow slideshow-arrow--next" onclick="changeSlide(1)">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor"><path d="M6 3l5 5-5 5V3z"/></svg>
      </button>
    </div>
  </div>
{% endif %}
{% stylesheet %}

/* --- Slideshow Container --- */
.slideshow-container {
  flex: 1;
  overflow: hidden; /* ✅ Prevent horizontal scroll */
  border-radius: 8px;
  position: relative;
}

/* --- Track --- */
.slideshow-track {
  display: flex;
  transition: transform 0.4s ease;
  will-change: transform;
}

/* --- Slides --- */
.add-on-slide {
  min-width: 100%; /* ✅ Mobile: 1 per slide */
  flex-shrink: 0;
  display: flex;
  justify-content: center;
}

/* --- Desktop: multiple visible cards --- */
@media (min-width: 768px) {
  .add-on-slide {
    min-width: 50%; /* ✅ show 2 per slide on tablet */
  }
}
@media (min-width: 1024px) {
  .add-on-slide {
    min-width: 33.3333%; /* ✅ show 3 per slide on desktop */
  }
}

/* --- Arrows --- */
.slideshow-arrow {
  background: #f8f8f8;
  border: 1px solid #ddd;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  display: none; /* ✅ Hidden by default */
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
  z-index: 10;
}

.slideshow-arrow.visible { 
  display: flex; /* ✅ Only show when JS adds this */
}

.slideshow-arrow:hover {
  background: #e8e8e8;
  border-color: #bbb;
}

{% endstylesheet %}

