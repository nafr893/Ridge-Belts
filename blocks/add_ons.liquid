{% if product.metafields.custom.add_ons %}
  <script
    src="{{ 'product-form.js' | asset_url }}"
    type="module"
  ></script>
  
  <div class="product-add-ons" style="padding-top: {{ block.settings.padding_top }}px; padding-bottom: {{ block.settings.padding_bottom }}px;">
    <h3 class="text-lg font-semibold mb-2">{{ block.settings.heading | default: "Add-ons" }}</h3>
    <div class="add-ons-carousel">
      {% for add_on in product.metafields.custom.add_ons.value limit: 1 %}
        <div class="add-on-card">
          <a href="{{ add_on.url }}" class="block">
            <img 
              src="{{ add_on.featured_image | image_url: width: 150 }}" 
              alt="{{ add_on.title }}" 
              class="add-on-image"
              width="150"
              height="150"
              loading="lazy"
            >
            <p class="mt-2 text-sm font-medium">{{ add_on.title }}</p>
            {% if block.settings.show_price and add_on.price %}
              <p class="text-sm text-gray-600">{{ add_on.price | money }}</p>
            {% endif %}
          </a>
          
          {% comment %} Add to Cart Form {% endcomment %}
          <product-form-component 
            class="product-form"
            data-product-id="{{ add_on.id }}"
            data-quantity-default="1"
          >
            <form action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data" class="mt-2" on:submit="/handleSubmit">
              <input type="hidden" name="id" value="{{ add_on.selected_or_first_available_variant.id }}" ref="variantId">
              <input type="hidden" name="quantity" value="1">
              
              {% render 'add-to-cart-button',
                id: 'AddToCart-' | append: add_on.id,
                class: 'add-on-button button-small',
                can_add_to_cart: add_on.available,
                product: add_on,
                add_to_cart_text: block.settings.button_text
              %}
              
              <!-- Live region for screen readers -->
              <div ref="liveRegion" aria-live="polite" aria-atomic="true" class="sr-only"></div>
            </form>
          </product-form-component>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}

{% stylesheet %}

.product-add-ons {
  position: relative;
  z-index: 1;
}

.add-ons-carousel {
  display: flex;
  overflow-x: auto;
  overflow-y: hidden;
  scroll-behavior: smooth;
  gap: 1rem;
  padding-bottom: 10px;
  scrollbar-width: thin;
  scrollbar-color: #ccc transparent;
  white-space: nowrap;
  -webkit-overflow-scrolling: touch;
}

.add-ons-carousel::-webkit-scrollbar {
  height: 8px;
}

.add-ons-carousel::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 4px;
}

.add-ons-carousel::-webkit-scrollbar-thumb {
  background: #ccc;
  border-radius: 4px;
}

.add-ons-carousel::-webkit-scrollbar-thumb:hover {
  background: #999;
}

.add-on-card {
  display: flex; 
  flex-direction: column; 
  width: 200px;
  min-width: 200px;
  max-width: 200px;
  flex-shrink: 0;
  scroll-snap-align: start;
  white-space: normal;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  padding: 0.5rem;
  position: relative;
  z-index: 2;
}

.add-on-card .product-form {
  position: relative;
  z-index: 3;
}

.add-on-card .add-on-button {
  position: relative;
  z-index: 4;
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.add-on-image {
  width: 100%;
  height: 120px; 
  object-fit: cover;
  border-radius: 4px;
}

{% endstylesheet %}

{% schema %}
{
  "name": "Product Add-ons",
  "tag": "div",
  "settings": [
    {
      "type": "header",
      "content": "Add-ons Display"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Add-ons"
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Columns",
      "options": [
        {
          "value": "1",
          "label": "1 Column"
        },
        {
          "value": "2",
          "label": "2 Columns"
        },
        {
          "value": "3",
          "label": "3 Columns"
        }
      ],
      "default": "2"
    },
    {
      "type": "header",
      "content": "Button Settings"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Add to Cart Button Text",
      "default": "+"
    },
    {
      "type": "checkbox",
      "id": "show_price",
      "label": "Show product price",
      "default": true
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 24
    }
  ],
  "presets": [
    {
      "name": "Product Add-ons"
    }
  ]
}
{% endschema %}
